<div id="app">
    <section class="section">
        <div class="container mt-5">
            <div class="row">
                <div class="col-12 col-sm-8 offset-sm-2 col-md-6 offset-md-3 col-lg-6 offset-lg-3 col-xl-4 offset-xl-4">

                    <div class="card card-info animate__animated animate__fadeIn animate__slow shadow-lg">
                        <div class="card-header">
                            <h4>Login <strong>Admin</strong></h4>
                        </div>
                        <div class="card-body">

                            <% flash.get('fail').forEach(function (message) { %>
                                <div class="alert alert-danger" role="alert">
                                    <i class="fa fa-info mx-2"></i>
                                    <%= message %>
                                </div>
                            <% }) %>

                            <form method="POST" action="login">
                                <input type="hidden" name="_csrf" value="<%= _csrf %>" />
                                <div class="form-group">
                                    <label for="username">Username</label>
                                    <input id="username" type="text"
                                        class="form-control"
                                        name="username" tabindex="1" required="" autofocus autocomplete="off">
                                    <div class="invalid-feedback">
                                        Username tidak ditemukan
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="d-block">
                                        <label for="password" class="control-label">Password</label>
                                    </div>
                                    <input id="password" type="password"
                                        class="form-control"
                                        name="password" tabindex="2" required="">
                                    <div class="invalid-feedback">
                                        Password Salah
                                    </div>
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="btn btn-primary btn-lg btn-block" tabindex="3">
                                        LOGIN
                                    </button>
                                </div>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
<%- /* Expose server-rendered data as window.SAILS_LOCALS :: */ exposeLocalsToBrowser() %>